<h1 class="text-center mb-4">Welcome to my todolist app</h1>
<%= render 'layouts/task_form'  %>
<div class="container">
  <ul id="category-list">
  <% @categories.each do  |category|%>
  <li class="category-title"><%= category.title  %></li>
  <div class="card">
    <div class="category-content">
      <ul id="<%= category.title %>">
        <% category.tasks.each do |task|  %>
        <li id="task_<%= task.id%>">
          <%= task.title  %>
          <% unless task.deadline.nil? %>
            , to read: <%= task.deadline.strftime('%D')  %>
          <% end %>
            <%= link_to task_path(task.id), method: :delete, data: { confirm: "Voulez-vous supprimer cette tÃ¢che ?" }, :remote => true do %> <i class="fas fa-trash"></i> <dd>
            <%end%>

               <%= check_box_tag :checkbox, 1, false , data: { remote: true, url: task_path(task.id), params: { id: task.id, status: task.status}.to_param, method: "put" }%>

              
        </li>
        <% end %>
      </ul>
    </div>  
  </div>
  <% end %>
  </ul>
</div>

<div class="container">
  <div class="row">
    <% @tasks.each do |task|  %>
      <div class="card col-3">
        <% unless task.image.nil? %>
          <%= image_tag task.image, class: "rounded-circle" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
